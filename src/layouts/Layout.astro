---
import Header from "../components/Header.astro";
import { ClientRouter } from "astro:transitions";

interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link crossorigin="" href="https://fonts.gstatic.com/" rel="preconnect" />
    <link
      as="style"
      href="https://fonts.googleapis.com/css2?display=swap&family=Space+Grotesk:wght@400;500;700"
      onload="this.rel='stylesheet'"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script is:inline>
      function initThemeScript() {
        // Inicializa el tema según localStorage o preferencia del sistema
        const theme = localStorage.getItem("theme");
        const prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
        if (theme === "dark" || (!theme && prefersDark)) {
          document.documentElement.classList.add("dark");
        } else {
          document.documentElement.classList.remove("dark");
        }

        // Función para actualizar icono y foto
        function updateThemeUI() {
          const icon = document.getElementById("theme-icon");
          if (icon) icon.src = document.documentElement.classList.contains("dark") ? "/icons/light-mode.svg" : "/icons/dark-mode.svg";
          const img = document.getElementById("profile-photo");
          if (img) img.src = document.documentElement.classList.contains("dark") ? "/foto-dark.png" : "/foto.png";
        }

        // Botón de toggle
        const btn = document.getElementById("theme-toggle");
        if (btn && !btn._themeBound) {
          btn.addEventListener("click", () => {
            const html = document.documentElement;
            const isDark = html.classList.toggle("dark");
            localStorage.setItem("theme", isDark ? "dark" : "light");
            updateThemeUI();
          });
          btn._themeBound = true;
        }

        // Escuchar cambios de preferencia del sistema (solo una vez)
        if (!window._themeMediaBound) {
          window.matchMedia("(prefers-color-scheme: dark)").addEventListener("change", () => {
            const theme = localStorage.getItem("theme");
            if (!theme) {
              if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
                document.documentElement.classList.add("dark");
              } else {
                document.documentElement.classList.remove("dark");
              }
              updateThemeUI();
            }
          });
          window._themeMediaBound = true;
        }

        updateThemeUI();
      }

      document.addEventListener("DOMContentLoaded", initThemeScript);
      document.addEventListener("astro:after-swap", initThemeScript);
    </script>
  </head>
  <body>
    <ClientRouter />
    <Header data-astro-transition-persist/>
    <slot />
  </body>
</html>
