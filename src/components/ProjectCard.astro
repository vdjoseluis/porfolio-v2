---
interface Props {
  title: string;
  description: string;
  imageUrl: string;
  skills: string[];
}
const { title, description, imageUrl, skills } = Astro.props;
---

<div class="w-full max-w-xs sm:max-w-sm md:max-w-md lg:max-w-[340px] xl:max-w-[370px]">
  <a
    href="#"
    rel="noopener noreferrer"
    class="card rounded-lg overflow-hidden shadow-sm shadow-slate-400 hover:shadow-md transition-shadow duration-300 flex flex-col h-full"
  >
    <img
      src={imageUrl}
      alt={title + " Screenshot"}
      class="h-48 object-cover w-full"
    />
    <div class="p-4 flex-1 flex flex-col">
      <h3 class="text-lg font-bold mb-2 text-[#31a8cc]">{title}</h3>
      <p class=flex-1">
        {description}
      </p>
    </div>
    <div class="px-4 pb-4">
      <ul class="flex flex-wrap gap-2">
        {skills.map((skill) => (
          <li
            class="bg-gray-200 text-gray-800 text-sm px-2 py-1 rounded"
          >
            {skill}
          </li>
        ))}
      </ul>
    </div>
  </a>
</div>
