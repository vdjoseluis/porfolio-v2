---
import SkillCard from "../../components/SkillCard.astro";
import Layout from "../../layouts/Layout.astro";
import es from "../../i18n/es.json";
import en from "../../i18n/en.json";
import it from "../../i18n/it.json";

type Lang = "es" | "en" | "it";
const dict: Record<Lang, typeof es> = { es, en, it };
const lang = (Astro.params.lang ?? "es") as Lang;
const t = dict[lang];

const frontendSkills = ["Angular", "React", "HTML", "CSS", "JavaScript", "TypeScript", "Tailwind", "Bootstrap"].map(
  (name) => {
    const icon = `/skills/${name}.svg`;
    return { name, icon };
  }
);

const backendSkills = ["NestJS", "Node", "Java", "PHP", "MySQL", "PostgreSQL", "MongoDB", "Firebase"].map((name) => {
  const icon = `/skills/${name}.svg`;
  return { name, icon };
});

const mobileAndOthersSkills = ["Android", "Kotlin", "Git", "Github", "Inkscape", "Canva"].map((name) => {
  const icon = `/skills/${name}.svg`;
  return { name, icon };
});
---

  <Layout title={t.meta.skillsTitle}>
  <section class="flex flex-col min-h-screen py-10 items-center gap-10">
    <div class="flex flex-col items-center gap-4">
      <h2 class="text-3xl font-bold tracking-tighter sm:text-5xl text-gray-900">{t.skills.title}</h2>
      <p class="max-w-[400px] md:max-w-[600px] text-gray-500 text-center md:text-lg font-medium">
        {t.skills.subtitle}
      </p>
    </div>

    <div class="flex justify-center flex-wrap gap-10">
      <SkillCard title={t.skills.frontend} icon="/skills/Frontend.svg" skills={frontendSkills} />

      <SkillCard title={t.skills.backend} icon="/skills/Backend.svg" skills={backendSkills} />

      <SkillCard title={t.skills.other} icon="/skills/multi-platform.svg" skills={mobileAndOthersSkills} />
    </div>
  </section>
</Layout>
