---
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
import SkillCard from "../components/SkillCard.astro";

const frontendSkills = [
    { name: 'Angular', icon: '/src/assets/skills/Angular.svg' },
    { name: 'React', icon: '/src/assets/skills/React.svg' },   
    { name: 'HTML5', icon: '/src/assets/skills/HTML.svg' },
    { name: 'CSS3', icon: '/src/assets/skills/CSS.svg' },
    { name: 'JavaScript', icon: '/src/assets/skills/Javascript.svg' },
    { name: 'TypeScript', icon: '/src/assets/skills/Typescript.svg' },
    { name: 'Tailwind CSS', icon: '/src/assets/skills/Tailwind.svg' },
    { name: 'Bootstrap', icon: '/src/assets/skills/Bootstrap.svg' },
]
---

<Layout title="Skills | José Luis Vásquez Drouet">
  <Header />
  <main class="flex flex-col items-center justify-center">
    <div class="flex flex-col items-center space-y-2 my-4">
      <h2
        class="text-3xl font-bold tracking-tighter sm:text-5xl text-gray-900"
      >
        Mis Habilidades
      </h2>
      <p
        class="max-w-[400px] md:max-w-[600px] text-gray-500 text-center md:text-lg font-medium"
      >
        Una vista de mis competencias técnicas, organizadas para una
        rápida identificación de valor.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <SkillCard title="Desarrollo Frontend" icon="/src/assets/skills/Frontend.svg" skills={frontendSkills} />
    </div>
    
  </main>
</Layout>
